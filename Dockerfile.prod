FROM node:22-alpine

WORKDIR /app

RUN corepack enable
RUN corepack prepare pnpm@latest --activate

COPY package.json pnpm-lock.yaml ./

RUN pnpm install --frozen-lockfile --prod

COPY . .

RUN addgroup -g 1001 -S nodejs
RUN adduser -S hono -u 1001

RUN chown -R hono:nodejs /app
USER hono

EXPOSE 3001

CMD ["pnpm", "run", "dev"]

